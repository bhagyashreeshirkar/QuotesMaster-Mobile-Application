<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '25sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
                password: True
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.5, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y':0.5}
                Label:
                    id: login_wrong
                    text: ""
                    pos_hint: {'center_x': 0.5, 'center_y':1}

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                on_press:root.forgot_password()
                background_color:1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign up"
                on_press: root.sign_up()
                background_color:1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols:1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign up for space journey!"
            font_size: '20sp'
            color: 0.9, 0.8, 1, 1
        TextInput:
            id: username
            hint_text: "New Username"
            size_hint: 0.5, 0.5
        TextInput:
            id: password
            hint_text: "New Password"
            password: True
            size_hint: 0.5, 0.5
        RelativeLayout:
            Button:
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
                opacity: 1 if self.state == 'normal' else 0.5
                size_hint: 0.4, 0.4
                pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        Label:
            id: empty
            text: ""
            color: 0.1, 1, 0.7, 1

<SignUpSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful!"
            font_size: '20sp'
            color: 1, 0.8, 0.5, 1
            size_hint: 0.5, 0.5
        RelativeLayout:
            Button:
                text: "Login Page"
                on_press: root.go_to_login()
                opacity: 1 if self.state == 'normal' else 0.5
                size_hint: 0.4, 0.1
                color: 1, 1, 0.5, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}


<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.87, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
            font_size: '20sp'
            color: 1, 0.7, 0.2, 1
        TextInput:
            id: feeling
            hint_text: "Things to try: happy, sad, unmotivated.."
        RelativeLayout:
            Button:
                text: "Enlighten me"
                on_press: root.get_quote(root.ids.feeling.text)
                opacity: 1 if self.state == 'normal' else 0.5
                size_hint: 0.5, 0.7
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                color: 0.1, 0.9, 0.3, 1


        ScrollView:
            Label:
                id: quote
                text:""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]


<ForgotPasswordScreen>:
    GridLayout:
        padding: 10, 10
        spacing: 10, 10
        cols: 1
        Label:
            text:"Click on the button below to set \n  new username and password!"
            font_size: '19sp'
            size_hint: 0.5, 0.5
            text_size: None, self.height

        RelativeLayout:
            Button:
                text: "Create an account"
                on_press: root.forgot_pword()
                size_hint: 0.5, 0.1
                background_color:1, 1, 1, 1
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.6, 0.7, 1, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.7}


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpSuccess:
        name: "sign_up_success"
    LoginScreenSuccess:
        name: "login_screen_success"
    ForgotPasswordScreen:
        name: "forgot_password_screen"


